
<% @contact = Contact.new %>

<div id="contact-header">
  Contact Me
</div>
<%= form_for(@contact) do |f| %>
  <div id="form-main">
    <div id="form-div">
      <form class="form" id="form1">

        <p class="name">
          <%= f.text_field :name, class: "validate[required,custom[onlyLetter],length[0,100]] feedback-input", placeholder:"Name"%>
        </p>

        <p class="email">
          <%= f.text_field :email, class: "validate[required,custom[email]] feedback-input", placeholder:"Email"%>
        </p>

        <p class="text">
          <%= f.text_area :message, class: "validate[required,length[6,300]] feedback-input", placeholder:"Message" %>
        </p>

        <div class="submit">
          <%= f.submit type: "submit", value: "SEND", id: "button-blue"  %>
        </div>
      </form>
    </div>
  </div>
<% end %>

